{
  "name": "martindoyle",
  "version": "1.0.9",
  "description": "Martin Doyle's simple CLI",
  "type": "module",
  "bin": "dist/index.js",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "repository": "git@github.com:MartinDoyleUK/martindoyle-cli.git",
  "author": "Martin Doyle <github@martindoyle.com>",
  "license": "UNLICENSED",
  "private": false,
  "scripts": {
    "--------------- BUILD ---------------": "",
    "build:watch": "tsc --watch",
    "build": "tsc",
    "postbuild": "shx chmod +x dist/index.js",
    "--------------- LINTING ---------------": "",
    "lint": "run-p --continue-on-error --print-label --aggregate-output checktypes eslint",
    "checktypes": "tsc --noEmit",
    "eslint": "eslint .",
    "--------------- DEVELOPMENT ---------------": "",
    "dev": "run-p build:watch start:watch",
    "start:watch": "nodemon dist/index.js",
    "start": "node dist/index.js"
  },
  "lint-staged": {
    "*.{js,ts}": "yarn eslint"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/node": "^18.7.21",
    "@types/strip-color": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-array-func": "^3.1.7",
    "eslint-plugin-const-case": "^1.2.2",
    "eslint-plugin-functional": "^4.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jest-async": "^1.0.3",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-radar": "^0.2.1",
    "eslint-plugin-regexp": "^1.9.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "strip-color": "^0.1.0"
  }
}
